#include <stdio.h>
#include <stdlib.h>

struct node{
    int data;
    struct node* left;
    struct node* right;
}*head=NULL;

struct node*create(){
    int x;
    struct node*new=(struct node*)malloc(sizeof(struct node));
    printf("enter the data :");
    scanf("%d",&x);
    if(x==-1)
    return NULL;
    else{
        new->data=x;
        printf("enter the left child of %d",x);
        new->left=create();
        printf("enter the right child of %d",x);
        new->right=create();
        return new;
    }
}

void inorder(struct node*root){
    if(root!=NULL)
    {
        inorder(root->left);
        printf("%d\n",root->data);
        inorder(root->right);
    }
}

void preorder(struct node*root){
    if(root!=NULL)
    {
         printf("%d\n",root->data);
        preorder(root->left);
        preorder(root->right);
    }
}

void postorder(struct node*root){
    if(root!=NULL)
    {
         
        postorder(root->left);
        postorder(root->right);
        printf("%d\n",root->data);
    
    }
}


int main(){
    head=create();
    printf("INORDER:\n");
    inorder(head);
    printf("PREORDER:\n");
    preorder(head);
    printf("POSTORDER:\n");
    postorder(head);
}
