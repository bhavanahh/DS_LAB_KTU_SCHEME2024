#include <stdio.h>
#include <stdlib.h>
#define SIZE 5   // size of queue

int Q[SIZE];
int front = -1, rear = -1;

// Insert at front
void insertFront(int x) {
    if ((front == 0 && rear == SIZE - 1) || (front == rear + 1)) {
        printf("Queue FULL\n");
        return;
    }

    if (front == -1) {  // empty queue
        front = rear = 0;
    }
    else if (front == 0) {
        front = SIZE - 1;
    }
    else {
        front = front - 1;
    }

    Q[front] = x;
    printf("Inserted %d at FRONT\n", x);
}

// Insert at rear
void insertRear(int x) {
    if ((front == 0 && rear == SIZE - 1) || (front == rear + 1)) {
        printf("Queue FULL\n");
        return;
    }

    if (front == -1) {  // empty queue
        front = rear = 0;
    }
    else if (rear == SIZE - 1) {
        rear = 0;
    }
    else {
        rear = rear + 1;
    }

    Q[rear] = x;
    printf("Inserted %d at REAR\n", x);
}

// Delete from front
int deleteFront() {
    if (front == -1) {
        printf("Queue EMPTY\n");
        return -1;
    }

    int val = Q[front];
    if (front == rear) { // only one element
        front = rear = -1;
    }
    else if (front == SIZE - 1) {
        front = 0;
    }
    else {
        front = front + 1;
    }

    printf("Deleted %d from FRONT\n", val);
    return val;
}

// Delete from rear
int deleteRear() {
    if (front == -1) {
        printf("Queue EMPTY\n");
        return -1;
    }

    int val = Q[rear];
    if (front == rear) { // only one element
        front = rear = -1;
    }
    else if (rear == 0) {
        rear = SIZE - 1;
    }
    else {
        rear = rear - 1;
    }

    printf("Deleted %d from REAR\n", val);
    return val;
}

// Display queue
void display() {
    if (front == -1) {
        printf("Queue EMPTY\n");
        return;
    }

    printf("Queue Elements: ");
    int i = front;
    while (1) {
        printf("%d ", Q[i]);
        if (i == rear) break;
        i = (i + 1) % SIZE;
    }
    printf("\n");
}

// Menu driven main
int main() {
    int choice, val;
    while (1) {
        printf("\n--- Double Ended Queue Menu ---\n");
        printf("1. Insert Front\n");
        printf("2. Insert Rear\n");
        printf("3. Delete Front\n");
        printf("4. Delete Rear\n");
        printf("5. Display\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter value: ");
                scanf("%d", &val);
                insertFront(val);
                break;
            case 2:
                printf("Enter value: ");
                scanf("%d", &val);
                insertRear(val);
                break;
            case 3:
                deleteFront();
                break;
            case 4:
                deleteRear();
                break;
            case 5:
                display();
                break;
            case 6:
                exit(0);
            default:
                printf("Invalid choice!\n");
        }
    }
    return 0;
}
