#include <stdio.h>

struct term {
    int coef;
    int expo;
};

int main() {
    struct term poly1[20], poly2[20], poly3[40];
    int n1, n2, n3 = 0, i = 0, j = 0;

    // Input first polynomial
    printf("Enter number of terms in first polynomial: ");
    scanf("%d", &n1);
    printf("Enter coefficient and exponent (in descending order of exponent):\n");
    for (i = 0; i < n1; i++) {
        scanf("%d%d", &poly1[i].coef, &poly1[i].expo);
    }

    // Input second polynomial
    printf("Enter number of terms in second polynomial: ");
    scanf("%d", &n2);
    printf("Enter coefficient and exponent (in descending order of exponent):\n");
    for (i = 0; i < n2; i++) {
        scanf("%d%d", &poly2[i].coef, &poly2[i].expo);
    }

    // Reset i and j for merging
    i = 0;
    j = 0;
    n3 = 0;

    // Add both polynomials
    while (i < n1 && j < n2) {
        if (poly1[i].expo == poly2[j].expo) {
            poly3[n3].coef = poly1[i].coef + poly2[j].coef;
            poly3[n3].expo = poly1[i].expo;
            i++;
            j++;
            n3++;
        } 
        else if (poly1[i].expo > poly2[j].expo) {
            poly3[n3].coef = poly1[i].coef;
            poly3[n3].expo = poly1[i].expo;
            i++;
            n3++;
        } 
        else {
            poly3[n3].coef = poly2[j].coef;
            poly3[n3].expo = poly2[j].expo;
            j++;
            n3++;
        }
    }

    // Copy remaining terms (if any)
    while (i < n1) {
        poly3[n3].coef = poly1[i].coef;
        poly3[n3].expo = poly1[i].expo;
        i++;
        n3++;
    }

    while (j < n2) {
        poly3[n3].coef = poly2[j].coef;
        poly3[n3].expo = poly2[j].expo;
        j++;
        n3++;
    }

    // Display all polynomials
    printf("\nFirst Polynomial: ");
    for (i = 0; i < n1; i++) {
        if (poly1[i].expo != 0)
            printf("%dX^%d", poly1[i].coef, poly1[i].expo);
        else
            printf("%d", poly1[i].coef);
        if (i != n1 - 1)
            printf(" + ");
    }

    printf("\nSecond Polynomial: ");
    for (i = 0; i < n2; i++) {
        if (poly2[i].expo != 0)
            printf("%dX^%d", poly2[i].coef, poly2[i].expo);
        else
            printf("%d", poly2[i].coef);
        if (i != n2 - 1)
            printf(" + ");
    }

    printf("\nResultant Polynomial (Sum): ");
    for (i = 0; i < n3; i++) {
        if (poly3[i].expo != 0)
            printf("%dX^%d", poly3[i].coef, poly3[i].expo);
        else
            printf("%d", poly3[i].coef);
        if (i != n3 - 1)
            printf(" + ");
    }

    printf("\n");
    return 0;
}
