#include <stdio.h>

void main() {
    int a[10][10], b[10][10];
    int i, j, n;

    printf("Enter number of rows, columns and non-zero elements: ");
    scanf("%d %d %d", &a[0][0], &a[0][1], &a[0][2]);

    printf("Enter the sparse matrix (row column value):\n");
    for (i = 1; i <= a[0][2]; i++) {
        scanf("%d %d %d", &a[i][0], &a[i][1], &a[i][2]);
    }

    // Transpose
    b[0][0] = a[0][1];
    b[0][1] = a[0][0];
    b[0][2] = a[0][2];
    n = a[0][2];
    int k = 1;

    for (i = 0; i < a[0][1]; i++) {
        for (j = 1; j <= n; j++) {
            if (a[j][1] == i) {
                b[k][0] = a[j][1];
                b[k][1] = a[j][0];
                b[k][2] = a[j][2];
                k++;
            }
        }
    }

    printf("\nTranspose of sparse matrix:\n");
    for (i = 0; i <= n; i++) {
        printf("%d\t%d\t%d\n", b[i][0], b[i][1], b[i][2]);
    }
}
